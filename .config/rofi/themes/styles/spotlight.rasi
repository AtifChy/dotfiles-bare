mode-switcher {
	padding: 0px;
	margin: -12px 50px 10px;
	spacing: 0px;
}

button {
    border-radius: 0px 0px 5px 5px;
    padding: 10px;
    vertical-align: 0.5;
    horizontal-align: 0.5;
}

button selected {
  background-color: @background-alt;
}

num-filtered-rows {
    vertical-align: 0.5;
    expand:     false;
    text-color: @selected;
}

num-rows {
    padding: 0 16px 0 0;
    vertical-align: 0.5;
    expand:     false;
    text-color: @selected;
}

textbox-num-sep {
    vertical-align: 0.5;
    expand:     false;
    str:        "/";
    text-color: @selected;
}
