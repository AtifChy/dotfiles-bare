#!/bin/sh

options=(
"alacritty
bash
dmenu
doom/config.el
doom/init.el
dunst
dwm
fish
kitty
ncmpcpp
neofetch
neovim
paru
picom
ranger
spectrwm
st
zsh
zprofile"
)

case "$(echo -e "$options" | dmenu \
	-p 'config:' \
	-x 15 -y 9 \
	-w 1886 -h 24)" in
	alacritty) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/alacritty/alacritty.yml' ;;
	bash) exec alacritty -e sh -c 'sleep .05s && nvim ~/.bashrc' ;;
	dmenu ) exec alacritty -e sh -c 'sleep .05s && nvim ~/Downloads/suckless/dmenu-5.0/config.h' ;;
	doom/config.el) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/doom/config.el' ;;
	doom/init.el) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/doom/init.el' ;;
	dunst ) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/dunst/dunstrc' ;;
	dwm) exec alacritty -e sh -c 'sleep .05s && nvim ~/Downloads/suckless/dwm/config.h' ;;
	fish ) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/fish/config.fish' ;;
	kitty) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/kitty/kitty.conf' ;;
	ncmpcpp) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/ncmpcpp/config' ;;
	neofetch ) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/neofetch/config.conf' ;;
	neovim) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/nvim/init.vim' ;;
	paru) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/paru/paru.conf' ;;
	picom) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/picom/picom.conf' ;;
	ranger) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/ranger/rc.conf' ;;
	spectrwm) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/spectrwm/spectrwm.conf' ;;
	st) exec alacritty -e sh -c 'sleep .05s && nvim ~/Downloads/suckless/st-0.8.4/config.h' ;;
	zsh) exec alacritty -e sh -c 'sleep .05s && nvim ~/.config/zsh/.zshrc' ;;
	zprofile) exec alacritty -e sh -c 'sleep .05s && nvim ~/.zprofile' ;;
esac
