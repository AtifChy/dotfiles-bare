#!/bin/sh

check() {
    type "$*" >/dev/null || {
        echo "\033[1;31mError:\033[0m command \033[1;34m$*\033[0m not found."
        exit 1
    }
}

check grim
check convert
check slurp
check wl-copy
check wl-paste

grab=$(slurp -p -b '#00000000' 2>/dev/null)

[ "$grab" ] || {
    notify-send -u normal -a colorpicker -i gcolor3 'Warning â˜ ï¸' 'Failed to pick color ðŸ˜¥'
    exit 1
}

pick() {
    grim -g "$grab" -t ppm - |
        convert - -format '%[pixel:p{0,0}]' txt:- |
        awk 'NR>1 {print $(NF-1),$NF}' |
        tr '[:upper:]' '[:lower:]'
}

color=$(pick)

# get hex & rgb value
hex=${color%% *}
rgb=${color##*s}

# copy hex value to clipboard
wl-copy -n <<-EOF
	$hex
EOF

# create temporary icon for notification
tmp="/tmp/color.ppm"
convert -size 80x80 xc:"$hex" "$tmp"

# send notification
notify-send -u low -a colorpicker -i "$tmp" "ðŸŽ¨ $hex" "$rgb"
