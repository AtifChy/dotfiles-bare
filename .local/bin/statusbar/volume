#!/bin/sh

case $BUTTON in
	2) if [ $(pamixer --get-mute) = true  ]; then
		pamixer -u && notify-send "ðŸ“¢ Pamxier" "ðŸ”‡ Muted"
	   else
		pamixer -m && notify-send "ðŸ“¢ Pamxier" "ðŸ”Š Unmuted"
	   fi ;;
	4) pamixer --allow-boost -i 1 ;;
	5) pamixer --allow-boost -d 1 ;;
esac

[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”‰"
else
	icon="ðŸ”ˆ"
fi

